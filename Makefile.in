# BUILD_TYPE: {RELEASE, DEBUG}
BUILD_TYPE = DEBUG

# COMPILER: {INTEL, GCC, FUJITSU}
#COMPILER = INTEL
COMPILER = GCC
#COMPILER = FUJITSU

# MPI: {IMPI, OpenMPI, MPICH, FUJITSU}
#MPI = IMPI
MPI = OpenMPI
#MPI = MPICH
#MPI = FUJITSU

# DOWNLOAD_MPI (optional): {true, false}
#DOWNLOAD_MPI = true

# BLASLAPACK: {MKL, OpenBLAS, ATLAS, FUJITSU, SYSTEM}
